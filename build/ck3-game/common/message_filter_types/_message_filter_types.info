# Name of filter, automatically adds prefix matching localization: "message_filter_" + <key>
key = {
	### Brief: display ( enum )
	# Where to display the message
	#	Default: feed
	display = feed/toast/hidden

	### Brief: always_show ( bool )
	# Block player from hiding messages of this filter
	#	Default: no
	always_show = no

	### Brief: auto_pause ( bool )
	# If game should pause when messages of this filter appears
	#	Default: no
	auto_pause = no
}
